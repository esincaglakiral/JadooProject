
@model CreateDestinationCommand
@{
    ViewData["Title"] = "CreateDestination";
}

<div class="container">
    <h1>Tur Rotası Ekleme Sayfası</h1>

    <form method="post">

    
        <label>Şehir</label>
        <input type="text" asp-for="City" class="form-control" />
        <br />
        <label>Resim Url</label>
        <input type="text" asp-for="ImageUrl" class="form-control" />
        <br />
        <label>Fiyat</label>
        <input type="text" asp-for="Price" class="form-control" />
        <br />
        <label>Tur Süresi</label>
        <input type="text" asp-for="Duration" class="form-control" />
        <br />

        <button class="btn btn-primary">Ekle</button>
    </form>

</div>

