
@model UpdateNewsCommand
@{
    ViewData["Title"] = "UpdateNews";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <div class="card-title">Abone Güncelleme Sayfası</div>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="container">
                    <div class="form-group">
                        <form method="post">
                            <input type="hidden" asp-for="NewsId" class="form-control" />
                            <label>Mail</label>
                            <input type="email" asp-for="Email" required class="form-control" />
                            <br />
                            <input type="submit" class="btn btn-outline-primary" value="Güncelle" />

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

