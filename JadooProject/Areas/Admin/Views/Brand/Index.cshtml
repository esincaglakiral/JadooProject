@model List<GetBrandQueryResult>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}
<br /><br />
<div class="container">
    <div class="card">
        <div class="card-header">
            <div class="card-title">Markalar Alanı</div>
        </div>
        <div class="card-body">

            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th class="text-center">Resim</th>
                        <th class="text-center">İşlemler</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <th class="text-center">@count</th>
                            <td class="text-center"><img src="@item.ImageUrl" style=" width:150px; height:75px" /></td>
                            <td class="text-center" style="width:300px;">
                               <a href="/Admin/Brand/DeleteBrand/@item.BrandId" class="btn btn-outline-danger">Sil</a>
                               <a href="/Admin/Brand/UpdateBrand/@item.BrandId" class="btn btn-outline-success">Güncelle</a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
            <br />
            <a href="/Admin/Brand/CreateBrand" class="btn btn-outline-success">Marka Ekle</a>
        </div>
    </div>
</div>

